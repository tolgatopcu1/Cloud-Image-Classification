@model IEnumerable<ImageClassificationProject.Models.ClassificationHistory>

@{
    ViewData["Title"] = "Classification History";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-extrabold text-indigo-700 mb-6 border-b pb-3">
        Classification History
    </h1>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="p-4 mb-6 rounded-lg bg-red-100 border-red-400 text-red-700 border shadow-md">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <!-- No Records Found State -->
        <div class="text-center py-12 bg-white rounded-xl shadow-2xl border border-gray-100">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <h3 class="mt-4 text-xl font-semibold text-gray-900">No Records Found</h3>
            <p class="mt-2 text-md text-gray-500">
                You don't have a classification history yet. Upload an image to get started.
            </p>
            <div class="mt-6">
                <a asp-controller="Home" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                    Upload New Image
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- History Table -->
        <div class="shadow-2xl overflow-hidden rounded-xl border border-gray-200">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Image
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Timestamp
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                File Name
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Prediction Result
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Confidence Score
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Azure Blob URI
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- YENİ: Resim Önizlemesi -->
                                <td class="px-6 py-4">
                                    <img src="@item.BlobUri" alt="@item.ClassificationResult" 
                                         class="h-12 w-12 object-cover rounded-md shadow-md"
                                         onerror="this.onerror=null; this.src='https://placehold.co/48x48/CCCCCC/666666?text=No%20Image';" />
                                </td>
                                
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @item.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @item.FileName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-indigo-600 font-bold">
                                    @item.ClassificationResult
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">
                                    @item.ConfidenceScore.ToString("P1")
                                </td>
                                <td class="px-6 py-4 text-sm text-blue-500 hover:text-blue-700 max-w-xs truncate" title="@item.BlobUri">
                                    <a href="@item.BlobUri" target="_blank" class="truncate block hover:underline">
                                        @item.BlobUri
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>